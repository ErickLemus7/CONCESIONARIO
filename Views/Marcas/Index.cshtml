@model IEnumerable<Concesionario.Models.Marca>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de Marcas</h1>

<p>
    <div class="d-grid gap-2">
        <a class="btn btn-success" type="button" asp-action="Create">Adicionar Marca</a>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a button type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a type="button" class="btn btn-warning"  asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" id="btn_eliminar">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
